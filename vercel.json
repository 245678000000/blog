  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/((?!api|articles|images|rss\\.xml|sitemap\\.xml|robots\\.txt|favicon\\.svg).*)",
      "destination": "/index.html"
    }
  ]
}
